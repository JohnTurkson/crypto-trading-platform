{
    "compilerOptions": {
        "target": "ES2020",
        "lib": ["ES2020"],
        "allowJs": false,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "CommonJS",
        "moduleResolution": "node",
        "isolatedModules": true
    },
    "include": [
        "src"
    ]
}
